<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author="vsilenko" id="1">
        <createTable remarks="Dictionary of process template statuses" tableName="process_template_status">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="process_template_status_pk"/>
            </column>
            <column name="code" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="vsilenko" id="2">
        <comment>Init table process_template_status</comment>
        <insert tableName="process_template_status">
            <column name="id" value="1"/>
            <column name="code" value="DRAFT"/>
            <column name="description" value="Process template is in DRAFT status"/>
        </insert>
        <insert tableName="process_template_status">
            <column name="id" value="2"/>
            <column name="code" value="ACTIVE"/>
            <column name="description" value="Process template is in ACTIVE status"/>
        </insert>
        <insert tableName="process_template_status">
            <column name="id" value="3"/>
            <column name="code" value="INACTIVE"/>
            <column name="description" value="Process template is in INACTIVE status"/>
        </insert>
        <rollback>
            <delete tableName="process_template_status">
                <where>code = 'DRAFT'</where>
            </delete>
            <delete tableName="process_template_status">
                <where>code = 'ACTIVE'</where>
            </delete>
            <delete tableName="process_template_status">
                <where>code = 'INACTIVE'</where>
            </delete>
        </rollback>
    </changeSet>

    <changeSet author="vsilenko" id="3">
        <createTable remarks="Dictionary of process template types" tableName="process_template_type">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="process_template_type_pk"/>
            </column>
            <column name="code" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="vsilenko" id="4">
        <comment>Init table process_template_type</comment>
        <insert tableName="process_template_type">
            <column name="id" value="1"/>
            <column name="code" value="BPMN"/>
            <column name="description" value="Process template type is BPMN"/>
        </insert>
        <insert tableName="process_template_type">
            <column name="id" value="2"/>
            <column name="code" value="FORM"/>
            <column name="description" value="Process template type is FORM"/>
        </insert>
        <insert tableName="process_template_type">
            <column name="id" value="3"/>
            <column name="code" value="PDF"/>
            <column name="description" value="Process template type is PDF"/>
        </insert>
        <insert tableName="process_template_type">
            <column name="id" value="4"/>
            <column name="code" value="PPT"/>
            <column name="description" value="Process template type is PPT"/>
        </insert>
        <insert tableName="process_template_type">
            <column name="id" value="5"/>
            <column name="code" value="XLS"/>
            <column name="description" value="Process template type is XLS"/>
        </insert>
        <rollback>
            <delete tableName="process_template_type">
                <where>code = 'BPMN'</where>
            </delete>
            <delete tableName="process_template_type">
                <where>code = 'FORM'</where>
            </delete>
            <delete tableName="process_template_type">
                <where>code = 'PDF'</where>
            </delete>
            <delete tableName="process_template_type">
                <where>code = 'PPT'</where>
            </delete>
            <delete tableName="process_template_type">
                <where>code = 'XLS'</where>
            </delete>
        </rollback>
    </changeSet>

    <changeSet author="vsilenko" id="5">
        <createTable remarks="PMA's process templates with details" tableName="process_template">
            <column name="uuid" type="${uuid_type}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="process_template_pk"/>
            </column>
            <column name="path" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_time" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="file_date" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>

            <column name="file_length" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="file_content" type="bytea">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="path, file_name, version" constraintName="process_template_uc"
                             tableName="process_template"/>
        <addForeignKeyConstraint baseColumnNames="type_id" baseTableName="process_template"
                                 constraintName="process_template_type_id_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="id" referencedTableName="process_template_type" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="status_id" baseTableName="process_template"
                                 constraintName="process_template_status_id_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="id" referencedTableName="process_template_status" validate="true"/>
    </changeSet>

</databaseChangeLog>