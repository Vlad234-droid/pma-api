<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author="vshatokhin" id="1">
        <createTable remarks="PM process status dictionary"
                     tableName="pm_process_status">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pm_process_status_pk"/>
            </column>
            <column name="code" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="vshatokhin" id="2">
        <comment>Init table pm_process_status</comment>
        <insert tableName="pm_process_status">
            <column name="id" value="1"/>
            <column name="code" value="REGISTERED"/>
            <column name="description" value="PM process is registered for the colleague"/>
        </insert>
        <insert tableName="pm_process_status">
            <column name="id" value="2"/>
            <column name="code" value="STARTED"/>
            <column name="description" value="PM process is started for the colleague"/>
        </insert>
        <insert tableName="pm_process_status">
            <column name="id" value="3"/>
            <column name="code" value="SUSPENDED"/>
            <column name="description" value="The process is suspended"/>
        </insert>
        <insert tableName="pm_process_status">
            <column name="id" value="4"/>
            <column name="code" value="TERMINATED"/>
            <column name="description" value="Process is terminated"/>
        </insert>
        <insert tableName="pm_process_status">
            <column name="id" value="5"/>
            <column name="code" value="COMPLETED"/>
            <column name="description" value="PM process completed"/>
        </insert>
        <rollback>
            <delete tableName="pm_process_status">
                <where>code = 'REGISTERED'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_process_status">
                <where>code = 'STARTED'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_process_status">
                <where>code = 'SUSPENDED'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_process_status">
                <where>code = 'TERMINATED'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_process_status">
                <where>code = 'COMPLETED'</where>
            </delete>
        </rollback>
    </changeSet>

    <changeSet author="vshatokhin" id="3">
        <createTable remarks="PM review status dictionary"
                     tableName="pm_review_status">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pm_review_status_pk"/>
            </column>
            <column name="code" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="vshatokhin" id="4">
        <comment>Init table pm_review_status</comment>
        <insert tableName="pm_review_status">
            <column name="id" value="1"/>
            <column name="code" value="DRAFT"/>
            <column name="description" value="Saved as draft"/>
        </insert>
        <insert tableName="pm_review_status">
            <column name="id" value="2"/>
            <column name="code" value="WAITING_FOR_APPROVAL"/>
            <column name="description" value="Waiting for approval"/>
        </insert>
        <insert tableName="pm_review_status">
            <column name="id" value="3"/>
            <column name="code" value="APPROVED"/>
            <column name="description" value="Approved"/>
        </insert>
        <insert tableName="pm_review_status">
            <column name="id" value="4"/>
            <column name="code" value="DECLINED"/>
            <column name="description" value="Declined to fix"/>
        </insert>
        <insert tableName="pm_review_status">
            <column name="id" value="5"/>
            <column name="code" value="TIMEOUT"/>
            <column name="description" value="Timeout expired"/>
        </insert>
        <rollback>
            <delete tableName="pm_review_status">
                <where>code = 'DRAFT'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_review_status">
                <where>code = 'WAITING_FOR_APPROVAL'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_review_status">
                <where>code = 'APPROVED'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_review_status">
                <where>code = 'DECLINED'</where>
            </delete>
        </rollback>
        <rollback>
            <delete tableName="pm_review_status">
                <where>code = 'TIMEOUT'</where>
            </delete>
        </rollback>
    </changeSet>

    <changeSet author="vshatokhin" id="5">
        <createTable remarks="PM process"
                     tableName="pm_process">
            <column name="uuid" type="${uuid_type}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pm_process_pk"/>
            </column>
            <column name="status_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="bpm_process_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column name="business_key" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_update_time" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="status_id" baseTableName="pm_process"
                                 constraintName="process_status_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="id" referencedTableName="pm_process_status" validate="true"/>
    </changeSet>

    <changeSet author="vshatokhin" id="6">
        <createTable remarks="PM process history"
                     tableName="pm_process_hi">
            <column name="uuid" type="${uuid_type}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pm_process_hi_pk"/>
            </column>
            <column name="status_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pm_process_hi_pk"/>
            </column>
            <column name="update_time" type="TIMESTAMPTZ">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pm_process_hi_pk"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="uuid" baseTableName="pm_process_hi"
                                 constraintName="process_hi_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="uuid" referencedTableName="pm_process" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="status_id" baseTableName="pm_process_hi"
                                 constraintName="process_status_fk" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE"
                                 referencedColumnNames="id" referencedTableName="pm_process_status" validate="true"/>
    </changeSet>
</databaseChangeLog>