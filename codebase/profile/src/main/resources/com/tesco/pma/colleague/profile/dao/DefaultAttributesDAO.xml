<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tesco.pma.colleague.profile.dao.ProfileAttributeDAO">

    <resultMap id="defaultAttrRM" type="com.tesco.pma.colleague.profile.domain.DefaultAttribute">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="value" column="value"/>

        <result property="criteria" column="criteria_id"
                typeHandler="com.tesco.pma.dao.utils.DictionaryItemTypeHandler"
                javaType="com.tesco.pma.colleague.profile.domain.DefaultAttributeCriteria"/>

        <result property="category" column="category_id"
                typeHandler="com.tesco.pma.dao.utils.DictionaryItemTypeHandler"
                javaType="com.tesco.pma.colleague.profile.domain.DefaultAttributeCategory"/>
    </resultMap>

    <select id="defaultAttrRM" resultMap="findByCriteriaAndCategory">
        SELECT *
        FROM default_attributes
        WHERE category_id = #{category} AND criteria_id = #{criteria}
    </select>

    <select id="defaultAttrRM" resultMap="findByCriteriasAndCategory">
        SELECT *
        FROM default_attributes
        WHERE category_id = #{category} AND criteria_id in #{criterias}
    </select>

</mapper>