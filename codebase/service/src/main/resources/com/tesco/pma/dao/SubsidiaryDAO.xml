<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tesco.pma.dao.SubsidiaryDAO">

    <resultMap id="subsidiaryResultMap" type="com.tesco.pma.api.Subsidiary">
        <id property="uuid" column="uuid"/>
    </resultMap>

    <select id="get" resultMap="subsidiaryResultMap">
        SELECT *
        FROM subsidiary
        WHERE uuid = #{subsidiaryUuid}
    </select>

    <select id="getAll" resultMap="subsidiaryResultMap">
        SELECT *
        FROM subsidiary
    </select>


    <insert id="insert" keyProperty="uuid"  keyColumn="uuid"  flushCache="true">
        INSERT INTO subsidiary
        (uuid, name)
        VALUES (#{subsidiary.uuid}, #{subsidiary.name})
    </insert>

    <update id="update" flushCache="true">
        UPDATE subsidiary
        SET name = (#{subsidiary.name})
        WHERE uuid = (#{subsidiary.uuid})
    </update>

    <update id="deleteSubsidiary">
        DELETE FROM subsidiary
        WHERE uuid = #{subsidiaryUuid}
    </update>

</mapper>